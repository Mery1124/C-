int Pencils = int.Parse(Console.ReadLine());
int markers = int.Parse(Console.ReadLine());
int litrs = int.Parse(Console.ReadLine());
int discount = Convert.ToInt32(Console.ReadLine());

double priceP = Pencils * 5.80;
double priceM = markers * 7.20;
double priceL = litrs * 1.20;
double total = priceP + priceM + priceL;
double totalD = total - (total * discount/100);
Console.WriteLine("The price with discount is: " + totalD);
